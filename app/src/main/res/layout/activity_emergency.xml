<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EFF3">

    <!-- Header Layout with Call Logs Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCallLogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Logs"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'M SAFE"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Touch Here for Emergency!!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/ivSosIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/b2"
            android:contentDescription="SOS Icon"/>
    </LinearLayout>

    <!-- Bottom Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="24dp">

        <Button
            android:id="@+id/btnCancelSOS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel SOS"
            android:backgroundTint="#DCD6D6"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="22dp"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSkipCountdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip Countdown"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="22dp"
            android:layout_marginBottom="38dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
